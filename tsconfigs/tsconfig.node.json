{
  "extends": ["./tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "customConditions": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true
  },
  "references": [{ "path": "./tsconfig.default.json" }],
  "include": [
    "../eslint.config.ts",
    "../vitest.config.ts",
    "../vitest.workspace.ts",
    "../scripts/**/*.ts",
    "../packages/*/src/**/*.node.ts",
    "../packages/eslint-config/src",
    "../packages/eslint-config/eslint-inspector.config.ts",
    "../packages/eslint-parser-plain/src",
    "../packages/eslint-plugin-format/src",
    "../packages/eslint-plugin-format/src/workers/dprint.js",
    "../packages/eslint-plugin-format/src/workers/prettier.js"
  ]
}
